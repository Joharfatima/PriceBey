<!-- Man Banner Section Begin -->
<section class="man-banner spad">
    <div class="container-fluid">
        <div class="row">


            <div class="col-lg-12">

                <div class="filter-control">

                    <ul>
                        <li class="active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Mobiles</li>
                        <li id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="true" i>Power Banks</li>
                        <li id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="true" i>Laptops</li>
                        <li id="pills-c4-tab" data-toggle="pill" href="#pills-c4" role="tab" aria-controls="pills-pr4cofile" aria-selected="true" i>Air Conditioners</li>
                        <li id="pills-c4-tab" data-toggle="pill" href="#pills-c4" role="tab" aria-controls="pills-pr4cofile" aria-selected="true" i>Refrigerators</li>
                        <li id="pills-c4-tab" data-toggle="pill" href="#pills-c4" role="tab" aria-controls="pills-pr4cofile" aria-selected="true" i>Smart TV</li>
                        <li id="pills-c4-tab" data-toggle="pill" href="#pills-c4" role="tab" aria-controls="pills-pr4cofile" aria-selected="true" i>Usb Flash Drives</li>
                    </ul>
                </div>


                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div class="row">
                            @Html.Action("Products", "Home", new { id = 1 })
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <div class="row">
                            @Html.Action("Products", "Home", new { id = 2 })
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                        <div class="row">
                            @Html.Action("Products", "Home", new { id = 3 })
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-c4" role="tabpanel" aria-labelledby="pills-c4-tab">
                        <div class="row">
                            @Html.Action("Products", "Home", new { id = 4 })
                        </div>
                        <div class="tab-pane fade" id="pills-c4" role="tabpanel" aria-labelledby="pills-c4-tab">
                            <div class="row">
                                @Html.Action("Products", "Home", new { id = 5 })
                            </div>
                            <div class="tab-pane fade" id="pills-c4" role="tabpanel" aria-labelledby="pills-c4-tab">
                                <div class="row">
                                    @Html.Action("Products", "Home", new { id = 6 })
                                </div>
                                <div class="tab-pane fade" id="pills-c4" role="tabpanel" aria-labelledby="pills-c4-tab">
                                    <div class="row">
                                        @Html.Action("Products", "Home", new { id = 7 })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Man Banner Section End -->

@section scripts {
    <script>
        $(document).ready(function () {
            $("div").on("click", ".filter-control li", function () {
                $(".filter-control li").removeClass('active');
                $(this).addClass('active');
                var href = $(this).attr('href');

                $(".tab-pane").removeClass('active').removeClass('show');
                $(href).addClass('active').addClass('show');
            });
        });
    </script>
}