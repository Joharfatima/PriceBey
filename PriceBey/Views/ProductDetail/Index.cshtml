@model PriceBey.Models.Product
@{
    ViewBag.Title = Model.Name;
    var priceCount = 0;
}

<section class="product-shop spad page-details">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="product-pic-zoom">
                            <img class="product-big-img" src="@Model.Image" alt="image">
                            <div class="zoom-icon">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        </div>
                        @*<div class="product-thumbs">
                            <div class="product-thumbs-track ps-slider owl-carousel">
                                <div class="pt active" data-imgbigurl="img/product-single/product-1.jpg">
                                    <img src="/content/img/product-single/product-1.jpg" alt="">
                                </div>
                                <div class="pt" data-imgbigurl="img/product-single/product-2.jpg">
                                    <img src="/content/img/product-single/product-2.jpg" alt="">
                                </div>
                                <div class="pt" data-imgbigurl="img/product-single/product-3.jpg">
                                    <img src="/content/img/product-single/product-3.jpg" alt="">
                                </div>
                                <div class="pt" data-imgbigurl="img/product-single/product-3.jpg">
                                    <img src="/content/img/product-single/product-3.jpg" alt="">
                                </div>
                            </div>
                        </div>*@
                    </div>
                    <div class="col-lg-7">
                        <div class="product-details">
                            <div class="pd-title">
                                <span>@Model.Brand.Name</span>
                                <h3>@Model.Name</h3>

                            </div>
                            <div class="pd-desc">

                                @foreach (var price in Model.Prices.OrderBy(a => a.Price))
                                {
                                <div class="cheapest-store row">
                                    <div class="col-xs-4 col-lg-4 logo">
                                        @if (price.Store.Logo != null)
                                        {
                                            <img alt="@price.Store.Name" src="~/StoreLogos/@price.StoreId/@price.Store.Logo">
                                        }
                                        else
                                        {
                                            <span>@price.Store.Name</span>
                                        }

                                    </div>
                                    <div class="col-xs-4 col-lg-4 prices text-center">
                                        <div class="price-current"><span>PKR </span>@price.Price</div>

                                        @if (priceCount == 0)
                                        {
                                            <div class="best-tag">
                                                BEST PRICE
                                            </div>
                                        }

                                    </div>
                                    <div class="col-xs-4 col-lg-4 text-right">
                                        <a href="@price.Url" class="btn btn-success mb-2">
                                            Go To Store
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                        <br />
                                        <button type="button" class="btn btn-info btn-lg">
                                            Book Now
                                            <i class="fa fa-shopping-cart"></i>
                                        </button>

                                    </div>

                                </div>
                                    

                                    priceCount++;
                                }


                                
                            </div>
                        </div>
                    </div>
                    <div class="product-tab">
                        <div class="tab-item">
                            <ul class="nav" role="tablist">
                                <li>
                                    <a class="active" data-toggle="tab" href="#tab-1" role="tab">DESCRIPTION</a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#tab-2" role="tab">SPECIFICATIONS</a>
                                </li>
                              
                            </ul>
                        </div>
                        <div class="tab-item-content">
                            <div class="tab-content">
                                <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                                    <div class="product-content">
                                        @Model.Description
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tab-2" role="tabpanel">
                                    <div class="specification-table">
                                        <table>
                                            <tr>
                                                <td class="p-catagory">Customer Rating</td>
                                                <td>
                                                    <div class="pd-rating">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star-o"></i>
                                                        <span>(5)</span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Price</td>
                                                <td>
                                                    <div class="p-price">$495.00</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Add To Cart</td>
                                                <td>
                                                    <div class="cart-add">+ add to cart</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Availability</td>
                                                <td>
                                                    <div class="p-stock">22 in stock</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Weight</td>
                                                <td>
                                                    <div class="p-weight">1,3kg</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Size</td>
                                                <td>
                                                    <div class="p-size">Xxl</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Color</td>
                                                <td><span class="cs-color"></span></td>
                                            </tr>
                                            <tr>
                                                <td class="p-catagory">Sku</td>
                                                <td>
                                                    <div class="p-code">00012</div>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>