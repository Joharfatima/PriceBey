<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="/Content/img/fav.png">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/content/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/content/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/content/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="/content/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/content/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/content/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/content/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="/content/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/content/css/style.css" type="text/css">
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Section Begin -->
    <header class="header-section">

        <div class="container">
            <div class="inner-header">
                <div class="row">
                    <div class="col-lg-2 col-md-2">
                        <div class="logo">
                            <a href="/">
                                <img src="/content/img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7">
                        <div class="advanced-search">
                            <button type="button" class="category-btn">All Categories</button>
                            <div class="input-group">
                                <input type="text" placeholder="What do you need?" name="q" id="txtQ">
                                <button type="button" id="btnSearch"><i class="ti-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 text-right col-md-3">
                        <ul class="nav-right">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="heart-icon">


                                    <a href="/Customer">
                                        <i class="icon_heart_alt"></i>

                                        Dashboard
                                    </a>
                                </li>

                            }


                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="nav-item">
            <div class="container" style="">
                <div class="nav-depart">
                    <div class="depart-btn">
                        <i class="ti-menu"></i>
                        <span>All Categories</span>
                        <ul class="depart-hover">
                            <li class="active"><a href="/productslist/?ct=1">Mobile Phones</a></li>
                            <li><a href="/productslist/?ct=2">Power Banks</a></li>
                            <li><a href="/productslist/?ct=3">Laptops</a></li>
                            <li><a href="/productslist/?ct=4">Air Conditioners</a></li>
                            <li><a href="/productslist/?ct=5">Refrigerators</a></li>
                            <li><a href="/productslist/?ct=6">Smart TV</a></li>
                            <li><a href="/productslist/?ct=7">Usb Flash Drives</a></li>
                        </ul>
                    </div>
                </div>
                <nav class="nav-menu mobile-menu">
                    <ul>
                        <li class="active">@Html.ActionLink("Home", "index")</li>
                        <li><a href="/Contact">Contact</a></li>
                        <li><a href="/About">About</a></li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            
                        }
                        else
                        {
                            <li><a href="/Account/Login">Login</a></li>
                            <li><a href="/Account/Register">Register</a></li>
                        }
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
    </header>
    <!-- Header End -->
    @RenderBody()
    <!-- Footer Section Begin -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="footer-left">
                        <div class="footer-logo">
                            <a href="#"><img src="~/Content/img/logo-v.png" alt=""></a>
                        </div>
                        <ul>
                            <li>Address: Bosan Road, Multan</li>
                            <li>Phone: +92 33379430</li>
                            <li>Email: contact@pricebey.com</li>
                        </ul>
                        <div class="footer-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 offset-lg-1">
                    <div class="footer-widget">
                        <h5>Information</h5>
                        <ul>
                            <li><a href="/About">About Us</a></li>
                            <li><a href="/Contact">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="footer-widget">
                        <h5>My Account</h5>
                        <ul>
                            <li><a href="#">My Account</a></li>
                            <li><a href="/ProductsList">Shop</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="newslatter-item">
                        <h5>Join Our Newsletter Now</h5>
                        <p>Get E-mail updates about our latest shop and special offers.</p>
                        <form action="/Subscribe/Create" class="subscribe-form" method="post">
                            <input type="text" name="email" required="" placeholder="Enter Your Mail">
                            <button type="submit">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="/content/js/jquery-3.3.1.min.js"></script>
    <script src="/content/js/bootstrap.min.js"></script>
    <script src="/content/js/jquery-ui.min.js"></script>
    <script src="/content/js/jquery.countdown.min.js"></script>
    <script src="/content/js/jquery.nice-select.min.js"></script>
    <script src="/content/js/jquery.zoom.min.js"></script>
    <script src="/content/js/jquery.dd.min.js"></script>
    <script src="/content/js/jquery.slicknav.js"></script>
    <script src="/content/js/owl.carousel.min.js"></script>
    <script src="/content/js/main.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#txtQ').autocomplete({
                minLength: 1,
                source: function (request, response) {
                    $.ajax({
                        url: "/productslist/autocomplete",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.Name, value: item.Name, ID: item.ID };
                            }))

                        },
                       
                    })
                },
                select: function (event, ui) {

                    location.href = '/productdetail?id=' + ui.item.ID;
                }
                
            });

            $('#txtQ').keyup(function (e) {

                var val = $(this).val();

                if (e.keyCode == 13) {
                    if ($.trim(val)) {
                        window.location.href = '/productslist/?q=' + val
                    }
                }

            });

            $('#btnSearch').click(function (e) {

                var val = $('#txtQ').val();

                if ($.trim(val)) {
                    window.location.href = '/productslist/?q=' + val
                }

            });
        });
    </script>
</body>
</html>
