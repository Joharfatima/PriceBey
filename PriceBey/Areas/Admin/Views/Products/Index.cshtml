@model IEnumerable<PriceBey.Models.Product>

@{
    ViewBag.Title = "Index";
}



<div class="row mb-2">
    <div class="col text-sm-right">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-danger" })
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            Brand
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Color
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Color.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <img src="@item.Image" style="max-height:50px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>

                        </tr>

                        <tr>
                            <td colspan="3">
                                <strong> Active Prices: </strong> @item.Prices.Where(c => c.IsActive == true).Count()
                                <strong> Other Prices: </strong> @item.Prices.Where(c => c.IsActive != true).Count()
                            </td>
                            <td colspan="4" class="text-right">

                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-primary mb-1" })
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-info mb-1" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-warning" })

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
